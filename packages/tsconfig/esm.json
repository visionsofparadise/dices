{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Module",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["ESNEXT", "DOM", "DOM.Iterable", "DOM.AsyncIterable"],
    "module": "esnext",
    "target": "ES2020",
    "importHelpers": true,
    "noEmitHelpers": true
  },
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "ES2022",
      "target": "ES2020",
      "importHelpers": true,
    }
  }
}